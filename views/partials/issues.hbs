{{#exists issues}}
    <hr/>
    <h3>Help other projects - Total: {{this.total}}</h3>
    <div class="row">
        {{#each issues}}
            <div class="large-12 columns issue">
                <a href="{{this.repo_url}}">
                    <h5>{{this.repo_name}}</h5>
                </a>

                <div class="row">
                    <div class="large-1 columns">
                        <img class="avatar" src="{{this.avatar}}"/>
                    </div>
                    <div class="large-11">
                        <a class="issue-title" href="{{this.url}}">{{this.title}} - {{timeago this.created}}</a>
                        <ul>
                            {{#each labels}}
                                <span class="label" style="background-color:#{{this.color}}">{{this.name}}</span>
                            {{/each}}
                        </ul>
                    </div>
                </div>

                <p>{{this.description}}</p>
            </div>
        {{/each}}
    </div>
    <hr/>
{{/exists}}